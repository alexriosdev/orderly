<section class="section">
  <div class="container">
    <div class="title is-1">Welcome, <%= @user.name %> </div>
    <div class="title is-3 has-text-centered">Here are your appointments for the week</div>
    <% @user.appointments.each do |appointment|%>
      <div class = "block">
        <div class="box">
          <div class="title is-4">
            <%= link_to appointment.start_time.strftime("%A, %B %d, %Y"), appointment_path(appointment) %>
          </div>
          <p>Time: <%= appointment.start_time.strftime("%I:%M %p") %>
          - <%= appointment.end_time.strftime("%I:%M %p") %>          
          </p>
          <p>User: <%= appointment.user.name %></p>
          <p>Client: <%= appointment.client.name %></p>
          <p>Purpose :<%= appointment.purpose %></p>
          <p>Message :<%= appointment.message %></p>
          <div class="block">
            <%= link_to "Edit", edit_appointment_path(appointment), class: "button is-small" %>
            <%= link_to "Delete", "google.com", class: "button is-small is-danger" %>      
          </div>
        </div>
      </div> 
    <% end %>
    <br><br>
    <%= link_to "Create new appointment", new_appointment_path, class: "button is-primary" %>
  </div>
</section>
