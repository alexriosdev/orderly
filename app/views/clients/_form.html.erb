<div class="block">
  <div class="box">
    <%= form_for @client do |f| %>
      <%= f.label "name: "%>
      <%= f.text_field :name %> <br>

      <%= f.label "email: "%>
      <%= f.text_field :email %> <br>

      <%= f.label "phone_number: "%>
      <%= f.text_field :phone_number %> <br>

      <%= f.submit class: "button is-primary"%>
    <% end %>
  </div>
</div>