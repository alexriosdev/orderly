<div class="block">
  <div class="box">
    <%= render 'errors' %>
    <%= form_for @appointment do |f| %>

      <div class="block">
        <%= f.label "Purpose: ", class: "label"%>
        <%= f.text_field :purpose, class: "input" %>
      </div>
    
      <div class="block">
        <%= f.label "Start Time: ", class: "label" %>        
        <%= f.datetime_select :start_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "select py-2 px-2 mr-2" } %>
      </div>

      <div class="block">
        <%= f.label "End Time: ", class: "label" %>
        <%= f.datetime_select :end_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "select py-2 px-2 mr-2" } %>     
      </div>

      <div class="block">
        <%= f.label "Message: ", class: "label"%>
        <%= f.text_field :message, class: "input" %>      
      </div>

      <div class="block">
        <%= f.label "Client: ", class: "label" %>
        <%= f.collection_select :client_id, @clients, :id, :name, class: "select" %>        
      </div>
      
      <div class="block">
        <%= f.submit class: "button is-primary"%>      
      </div>

    <% end %>
  </div>
</div>