<section class="section">
  <div class="container">
    <div class="box">
      <div class="title is-3"><%= @appointment.start_time.strftime("%A, %B %d, %Y") %></div>
      <p>Time: <%= @appointment.start_time.strftime("%I:%M %p") %>
        - <%= @appointment.end_time.strftime("%I:%M %p") %>
      </p>
      <p>User: <%= link_to @appointment.user.name, user_path(@appointment.user.id) %></p>
      <p>Client: <%= link_to @appointment.client.name, client_path(@appointment.client.id) %></p>
      <p>Purpose: <%= @appointment.purpose %></p>
      <p>Message: <%= @appointment.message %></p>

      <div class="block">
        <%= link_to "Edit", edit_appointment_path, class: "button" %>
        <%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>   
    </div>

    <br><br>
    <%= link_to "Back", appointments_path, class: "button is-info" %>
  </div>
</section>

