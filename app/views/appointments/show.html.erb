<section class="section">
  <div class="container">
    <div class="box">
      <div class="title is-3"><%= @appointment.purpose %></div>  
      <p><strong>Date: </strong> <%= @appointment.start_date %></p>
      <p><strong>Time: </strong> <%= @appointment.start_hour %> - <%= @appointment.end_hour %></p>
      <p><strong>Client: </strong> <%= link_to @appointment.client.name, client_path(@appointment.client.id) %></p>
      <p><strong>Message: </strong> <%= @appointment.message %></p>

      <div class="block">
        <%= link_to "Edit", edit_appointment_path, class: "button is-small" %>
        <%= button_to "Delete", @appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-small is-danger" %>
      </div>        
    </div>

    <br><br>
    <%= link_to "Back", appointments_path, class: "button is-info" %>
  </div>
</section>

