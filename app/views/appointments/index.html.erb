<section class="section">
	<div class="container">
		<h1 class="title is-1 has-text-centered"> Appointment Schedule</h1>
    <% if @appointments.present? %>
      <% @appointments.each_with_index do |appointment, index| %>
      <div class="block">
        <div class="box">
          <%= link_to appointment.start_time.strftime("%A, %B %d, %Y") , appointment_path(appointment), class: "title is-3" %>
          <p>
            <%= appointment.start_time.strftime("%I:%M %p") %>
            - <%= appointment.end_time.strftime("%I:%M %p") %>
          </p>
        </div>
      </div>
      <% end %>
    <% else %>
      <div class="block">
        <div class="box is-danger">
          <h3 class="title is-4">There are no appointments to show...</h3>
        </div>
      </div>
    <% end %>

		<div class="block">
			<%= link_to "Create Appointment", new_appointment_path, class: "button is-primary" %>
		</div>

		<br> <br>
		<%= link_to "Create Clients", new_client_path, class: "button" %>	

		<br> <br>
		<%= link_to "Visit Clients", clients_path, class: "button" %>

    <br><br>



    <% if user_signed_in? %>
    <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "button" %> 
    <% end %>

	</div>
</section>