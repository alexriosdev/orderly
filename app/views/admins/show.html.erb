<h1 class="title is-1">Welcome, <%= @admin.name %> </h1>
<h1 class="title is-3 has-text-centered">Here are your appointments for the week</h1>
<% @admin.appointments.each do |appointment|%>
  <div class = "block">
    <div class="box">
      <div class="title is-4">
        <%= appointment.appointment_time.strftime("%A, %B %d, %Y, %I:%M %p") %> <br>
      </div>
      <p>Employe: <%= appointment.employee.name %></p>
      <p>Client: <%= appointment.client.name %></p>
      <p>Purpose :<%= appointment.purpose %></p>
      <p>Message :<%= appointment.message %></p>
      <%= link_to "Edit", "google.com", class: "button" %>
      <%= link_to "Delete", "google.com", class: "button is-danger" %>
    </div>
  </div> 
<% end %>
<br><br>
<%= link_to "Create new appointment", new_appointment_path, class: "button is-primary" %>